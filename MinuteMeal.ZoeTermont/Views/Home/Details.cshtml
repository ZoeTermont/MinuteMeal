@{
	ViewData["Title"] = "Details";
}
@{
    @model MinuteMeals.Models.Recipe

<div class="text-center">
	<h1>@Model.Name</h1>
	<hr/>
		<p>Preparation time: @Model.CookingTimeInMinutes minutes</p>
		<h3 style="padding-top: 30px;">Ingredients:</h3>
		<p>@Model.Ingredients</p>
		<h3>Steps:</h3>
		<p>@Model.Steps</p>

	</div>
	<a asp-area="" asp-controller="Home" asp-action="Index">Return to homepage</a>

<style>
    .text-center {
        background-color: #f0f0f0;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }
</style>

}
